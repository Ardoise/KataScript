{
  "process": {
    "split": {
      "reload": {
        "pattern": "https://raw.github.com/Ardoise/KataScript/master/sh/etc/logstash/redis2elasticsearch",
        "conf": "/etc/logstash/redis2elasticsearch.conf",
        "input": "centralized",
        "output": "centralized"
      },
      "daemon": {
        "initd": "https://raw.github.com/Ardoise/KataScript/master/sh/etc/init.d/ulogstash"
      },
      "start": "/etc/init.d/logstash start",
      "stop": "/etc/init.d/logstash stop",
      "status": "/etc/init.d/logstash status"
    },
    "event": {
      "reload": {
        "pattern": "https://raw.github.com/Ardoise/KataScript/master/sh/etc/redis/6379.conf",
        "conf": "/etc/redis/6379.conf"
      },     
      "start": "service redis start",
      "stop": "service redis stop",
      "status": "service redis status",
      "daemon": "chkconfig redis on"
    },
    "search": {
      "reload": {
        "pattern": "https://raw.github.com/Ardoise/KataScript/master/sh/etc/elasticsearch/elasticsearch.yum",
        "conf": "/etc/elasticsearch/elasticsearch.yum",
        "cluster": "centrallog"
      },
      "start": "service elasticsearch start",
      "stop": "service elasticsearch stop",
      "status": "service elasticsearch status",
      "daemon": "chkconfig elasticsearch on"
    }, 
    "shipper": {
      "reload": {
        "pattern": "https://raw.github.com/Ardoise/KataScript/master/sh/etc/logstash/shipper2redis",
        "conf": "/etc/logstash/shipper2redis.conf",
        "input": "distributed",
        "output": "centralized"
      },
      "daemon": {
        "initd": "https://raw.github.com/Ardoise/KataScript/master/sh/etc/init.d/ulogstash"
      },
      "start": "/etc/init.d/logstash start",
      "stop": "/etc/init.d/logstash stop",
      "status": "/etc/init.d/logstash status"
    }
  },
  "connector": {
    "logstash": {
      "id": "shipper",
      "output": "redis",
      "platform": "distributed"
    },
    "redis": {
      "id": "event",
      "platform": "centralized"
    },
    "logstash": {
      "id": "split",
      "input": "redis",
      "output": "elasticsearch",
      "platform": "centralized"
    },
    "elasticsearch": {
      "id": "index",
      "platform": "centralized"
    },
    "kibana": {
      "id": "dashboard",
      "input": "elasticsearch",
      "platform": "centralized"
    }
  },
  "profil": {
    "split": {
      "id": "split",
      "platform": "centralized",
      "software": "logstash",
      "path": "/opt/logstash",
      "conf": "/etc/logstash",
      "log": "/var/log/logstash",
      "run": "/var/run/logstash",
      "lib": "/var/lib/logstash"
    },
    "event": {
      "id": "event",
      "platform": "centralized",
      "software": "redis",
      "path": "/opt/redis",
      "conf": "/etc/redis",
      "lib": "/var/lib/redis",
      "log": "/var/log/redis",
      "run": "/var/run/redis"
    },
    "search": {
      "id": "search",
      "platform": "centralized",
      "software": "elasticsearch",
      "path": "/opt/elasticsearch",
      "conf": "/etc/elasticsearch",
      "lib": "/var/lib/elasticsearch",
      "log": "/var/log/elasticsearch",
      "run": "/var/run/elasticsearch"
    },
    "shipper": {
      "id": "shipper",
      "platform": "distributed",
      "software": "logstash",
      "path": "/opt/logstash",
      "conf": "/etc/logstash",
      "lib": "/var/lib/logstash",
      "log": "/var/log/logstash",
      "run": "/var/run/logstash"
    }
  },
  "software": {
    "logstash": {
      "binary": "logstash-1.1.13-flatjar.jar",
      "desc": "Logstash Server",
      "name": "logstash",
      "download": "https://logstash.objects.dreamhost.com/release/",
      "version": "1.1.13"
    },
    "redis": {
      "binary": "redis-2.6.16.tar.gz",
      "download": "http://download.redis.io/releases/",
      "desc": "Redis Server",
      "name": "redis",
      "version": "2.6.16"
    },
    "elasticsearch": {
      "binary": "elasticsearch-0.90.3.tar.gz",
      "desc": "Elasticsearch Server",
      "name": "elasticsearch",
      "download": "http://www.elasticsearch.org/download/",
      "version": "0.90.3"
    },
    "mongodb": {
      "binary": "mongodb-10gen",
      "download": "http://downloads-distro.mongodb.org/repo/ubuntu-upstart",
      "desc": "Mongodb Server",
      "name": "mongodb",
      "version": "2.4.6"
    },
    "kibana": {
      "binary": "master.tar.gz",
      "download": "https://github.com/elasticsearch/kibana/archive/",
      "desc": "Kibana Server",
      "name": "kibana",
      "version": "3.m.2"
    },
    "flume": {
      "binary": "apache-flume-1.4.0-bin.tar.gz",
      "download": "http://www.apache.org/dyn/closer.cgi/flume/1.4.0/",
      "desc": "Flume Server",
      "name": "flume",
      "version": "1.4.0"
    },
    "graylog2": {
      "binary": "graylog2-server-0.13.0-rc.1.tar.gz",
      "download": "https://github.com/Graylog2/graylog2-server/releases/download/0.13.0-rc.1/",
      "desc": "Graylog2 Server",
      "name": "graylog2",
      "version": "0.13.0"
    }
  },
  "os": {
    "lucid32": {
      "name": "lucid32",
      "manager": "apt-get"
    },
    "lucid64": {
      "name": "lucid64",
      "manager": "apt-get"
    },
    "debian": {
      "name": "debian",
      "manager": "apt-get"
    },
    "centos": {
      "name": "centos",
      "manager": "yum"
    },
    "fedora": {
      "name": "fedora",
      "manager": "yum"
    },
    "redhat": {
      "name": "redhat",
      "manager": "yum"
    }
  },
  "platform": {
    "centralized": {
      "ip": "192.168.10.10",
      "os": "lucid32",
      "hostname": "host0",
      "name": "centralized"
    },
    "distributed": {
      "ip": "192.168.10.11",
      "os": "lucid32",
      "hostname": "host1",
      "name": "distributed"
    },
    "shard": [
      {
        "ip": "192.168.10.11",
        "os": "lucid32",
        "hostname": "host1",
        "name": "shard"
      },
      {
        "ip": "192.168.10.12",
        "os": "lucid32",
        "hostname": "host2",
        "name": "shard"
      },
      {
        "ip": "192.168.10.13",
        "os": "lucid32",
        "hostname": "host3",
        "name": "shard"
      },
      {
        "ip": "192.168.10.14",
        "os": "lucid32",
        "hostname": "host4",
        "name": "shard"
      }
    ]
  }
}
